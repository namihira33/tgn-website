---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
}

const { title, subtitle, align = 'left' } = Astro.props;
---

<div class:list={[
  'mb-8 md:mb-12',
  align === 'center' && 'text-center'
]}>
  <h2 class="text-2xl md:text-3xl font-bold text-text">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-2 text-text-muted">
      {subtitle}
    </p>
  )}
</div>
