---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'コンテンツ',
    links: [
      { href: '/news', label: 'NEWS' },
      { href: '/blog', label: 'ブログ' },
      { href: '/about', label: 'TGNについて' },
      { href: '/achievements', label: '業績' },
    ]
  },
  {
    title: 'サポート',
    links: [
      { href: '/donate', label: '寄付で応援' },
      { href: '/sponsor', label: 'パートナーシップ' },
      { href: 'mailto:tsukuba.graduate@gmail.com', label: 'お問い合わせ' },
      { href: 'https://x.com/TGN_Account', label: 'X (Twitter)', external: true },
    ]
  }
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href="/" class="inline-block text-white font-bold text-2xl mb-4">
          TGN
        </a>
        <p class="text-sm text-gray-400 leading-relaxed">
          つくば院生ネットワーク<br />
          Tsukuba Graduate students' Network
        </p>
        <p class="text-sm text-gray-400 mt-4">
          大学院生に、もう一つのコミュニティを
        </p>
      </div>

      <!-- Links -->
      {footerLinks.map(section => (
        <div>
          <h3 class="font-semibold text-white mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-400 hover:text-primary-light transition-colors inline-flex items-center gap-1"
                  {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
                >
                  {link.label}
                  {link.external && (
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <p class="text-sm text-gray-500 text-center">
        &copy; {currentYear} つくば院生ネットワーク (TGN). All rights reserved.
      </p>
    </div>
  </div>
</footer>
