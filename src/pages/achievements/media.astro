---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';

// メディア掲載情報（XMLから抽出）
const mediaItems = [
  { date: '2012-09-11', title: '筑波大学公式ホームページに掲載', description: '院生プレゼンバトル2012の取り組みが筑波大学公式サイトで紹介されました。' },
  { date: '2012-06-28', title: '科学技術コミュニケーション誌に掲載', description: '北海道大学CoSTEP発行「科学技術コミュニケーション」第11号に活動が掲載されました。' },
  { date: '2011-10-10', title: '筑波大学公式ホームページに掲載', description: '院生プレゼンバトル2011の様子が大学公式サイトで紹介されました。' },
  { date: '2011-10-03', title: '筑波大学新聞に掲載', description: '院生プレゼンバトルの活動が筑波大学新聞で取り上げられました。' },
  { date: '2011-09-15', title: 'つくばSTUDENTSに掲載', description: 'つくばエリアの学生メディア「つくばSTUDENTS」で活動が紹介されました。' },
  { date: '2011-02-27', title: 'インターネットテレビ出演', description: 'インターネットTV番組に出演し、活動を紹介しました。' },
];

// 年ごとにグループ化
const groupedMedia = mediaItems.reduce((acc, item) => {
  const year = item.date.split('-')[0];
  if (!acc[year]) acc[year] = [];
  acc[year].push(item);
  return acc;
}, {} as Record<string, typeof mediaItems>);

const years = Object.keys(groupedMedia).sort((a, b) => parseInt(b) - parseInt(a));
---

<BaseLayout title="メディア掲載情報" description="つくば院生ネットワーク（TGN）のメディア掲載・取材情報">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary to-primary-dark text-white py-16 md:py-24">
    <div class="container text-center">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">メディア掲載情報</h1>
      <p class="text-primary-light max-w-2xl mx-auto">
        新聞・雑誌・Web媒体等でのTGNの活動紹介
      </p>
    </div>
  </section>

  <!-- Breadcrumb -->
  <div class="bg-gray-50 py-3">
    <div class="container">
      <nav class="text-sm text-text-muted">
        <a href="/" class="hover:text-primary">ホーム</a>
        <span class="mx-2">/</span>
        <a href="/achievements" class="hover:text-primary">業績・成果</a>
        <span class="mx-2">/</span>
        <span class="text-text">メディア掲載情報</span>
      </nav>
    </div>
  </div>

  <!-- Media List -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        {years.map(year => (
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-text mb-6 pb-2 border-b-2 border-primary">{year}年</h2>
            <div class="space-y-4">
              {groupedMedia[year].map(item => (
                <div class="flex gap-4 p-5 bg-white rounded-xl border border-gray-100 hover:shadow-md transition-shadow">
                  <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15" />
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-1">
                      <time class="text-sm text-text-muted">{item.date.replace(/-/g, '/')}</time>
                    </div>
                    <h3 class="font-bold text-text mb-1">{item.title}</h3>
                    <p class="text-sm text-text-muted">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="pb-12">
    <div class="container text-center">
      <a href="/achievements" class="inline-flex items-center gap-2 text-primary hover:text-primary-dark font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        業績・成果に戻る
      </a>
    </div>
  </section>
</BaseLayout>
